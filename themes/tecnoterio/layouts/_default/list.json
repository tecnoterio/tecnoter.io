[
{{- range $i, $p := .Pages -}}
  {{- if $i }},{{ end }}
  {
    "title": {{ $p.Title | jsonify }},
    "slug": {{ or $p.Slug (and $p.File $p.File.BaseFileName) ($p.Title | urlize) | jsonify }},
    "url": {{ $p.RelPermalink | jsonify }},
    "date": {{ $p.Date.Format "2006-01-02" | jsonify }},
    "tags": {{ $p.Params.tags | default (slice) | jsonify }}
  }
{{- end -}}
]

